{
  "title": "CallScribe API",
  "uid": "callscribe-api",
  "schemaVersion": 36,
  "version": 2,
  "refresh": "10s",
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "Requests rate (rps)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(callscribe_requests_total[5m]))",
          "legendFormat": "rps"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Requests by endpoint",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "sum(rate(callscribe_requests_total[5m])) by (endpoint)",
          "legendFormat": "{{endpoint}}"
        }
      ]
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "p95 latency by endpoint (s)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(callscribe_request_latency_seconds_bucket[5m])) by (le, endpoint))",
          "legendFormat": "{{endpoint}}"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "5xx errors (rps)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "sum(rate(callscribe_requests_total{status=~\"5..\"}[5m]))",
          "legendFormat": "5xx"
        }
      ]
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Tasks created by source (rps)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "expr": "sum(rate(callscribe_tasks_created_total[5m])) by (source)",
          "legendFormat": "{{source}}"
        }
      ]
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Task status updates (rps)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 18 },
      "targets": [
        {
          "expr": "sum(rate(callscribe_task_status_total[5m])) by (status)",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Kafka enqueue (success/failure)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 18 },
      "targets": [
        {
          "expr": "sum(rate(callscribe_kafka_enqueue_total[5m])) by (result)",
          "legendFormat": "{{result}}"
        }
      ]
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "Upload size p95 (bytes)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 16, "x": 0, "y": 26 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(callscribe_upload_file_size_bytes_bucket[5m])) by (le))",
          "legendFormat": "p95 size"
        }
      ]
    },
    {
      "id": 9,
      "type": "stat",
      "title": "Kafka enqueue failures (last 5m)",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 26 },
      "targets": [
        {
          "expr": "sum(rate(callscribe_kafka_enqueue_total{result=\"failure\"}[5m]))",
          "legendFormat": "failures"
        }
      ]
    }
  ],
  "templating": {
    "list": []
  }
}

