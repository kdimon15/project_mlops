# CallScribe Configuration

# API Settings
APP_NAME=CallScribe API
APP_VERSION=1.0.0
DEBUG=false

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/callscribe

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_AUDIO_TOPIC=audio-topic
KAFKA_TRANSCRIPTION_TOPIC=transcription-topic

# LLM (OpenAI-compatible API via Ollama)
LLM_API_BASE_URL=http://ollama:11434/v1
LLM_API_KEY=ollama
LLM_MODEL=gemma:2b

# Kontur Talk Integration
KONTUR_TALK_API_URL=https://api.kontur.ru/talk/v1
KONTUR_TALK_API_KEY=your_api_key_here
KONTUR_TALK_WEBHOOK_SECRET=your_webhook_secret_here

# File Upload
MAX_FILE_SIZE_MB=500
UPLOAD_DIR=/tmp/uploads

# Monitoring
METRICS_ENABLED=true
