APP_NAME="CallScribe API"
APP_VERSION="1.0.0"
DEBUG=False

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/callscribe

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_AUDIO_TOPIC=audio-topic
KAFKA_TRANSCRIPTION_TOPIC=transcription-topic

# LLM / Ollama
LLM_API_BASE_URL=http://ollama:11434/
LLM_API_KEY=ollama
LLM_MODEL=gemma3:1b
LLM_MODEL_ID=gemma3:1b-it
LLM_MODEL_REVISION=main
LLM_TIMEOUT=120

# Kontur Talk integration
KONTUR_TALK_API_URL=
KONTUR_TALK_API_KEY=

# Zoom integration
ZOOM_ACCOUNT_ID=
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=
ZOOM_USER_ID=me
ZOOM_RECORDING_DAYS_BACK=30

# Hugging Face
HF_TOKEN=

# File handling
MAX_FILE_SIZE_MB=500
UPLOAD_DIR=/tmp/uploads

# ASR worker
ASR_MODEL_ID=ai-sage/GigaAM-v3
ASR_MODEL_REVISION=e2e_rnnt
ASR_SEGMENT_SECONDS=24

# Monitoring
METRICS_ENABLED=True

# UI
API_BASE_URL=http://api:8000

KAFKA_DIARIZATION_TOPIC=diarization-topic
DIARIZATION_MODEL=pyannote/speaker-diarization-3.1
